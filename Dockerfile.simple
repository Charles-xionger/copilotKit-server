FROM node:20-alpine

WORKDIR /app
RUN corepack enable

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN --mount=type=cache,id=pnpm-store,target=/root/.pnpm-store \
    pnpm install --frozen-lockfile --prod

# Copy server file
COPY server.js ./

# Expose port
EXPOSE 3001

# Start the application
CMD ["node", "server.js"]